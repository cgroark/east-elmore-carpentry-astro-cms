			transform 600ms cubic-bezier(0.25, 0.1, 0.25, 1);
	}

	.reveal.visible {
		opacity: 1;
		transform: translateY(0);
	}

	/* Accessibility: respect reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.reveal {
			opacity: 1;
			transform: none;
			transition: none;
		}
	}

